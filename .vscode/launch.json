{
	"configurations": [
		{
			"name": "Launch Node app.cjs",
			"program": "${workspaceFolder}/app.cjs",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/index.html"
        },
		{
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"name": "Open localhost in Firefox",
			"url": "http://localhost/index.html",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:8080",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Open localhost in Chrome",
			"url": "http://localhost/index.html",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"name": "Open as file in Firefox index.html",
			"file": "${workspaceFolder}/index.html"
		}
	]
}